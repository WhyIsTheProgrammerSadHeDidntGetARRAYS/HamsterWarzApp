@*Fixa så att denna component displayar vinnare på ett "snyggt sätt", ska visas efter varje rundas vinnare*@

<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">@hamster.Name.Substring(0,1)</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">WINNER</MudText>
            <MudText Typo="Typo.body2">@hamster.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardMedia Image=@hamster.ImageUrl style="width:300px; height:300px;"/>
</MudCard>


@code {
    [Parameter]
    public Hamster? hamster { get; set; }

}