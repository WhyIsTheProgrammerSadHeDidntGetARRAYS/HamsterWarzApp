<div class="modal fade show" id="myModal" style="display: block; background-color: rgba(10, 10, 10, .8)" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Title</h4>
            </div>
            <div class="modal-body">
                @*in this body im going to display a component who displays a list of hamsters defeated by a specific hamster*@
                <DefeatedHamsters Id="@Id"/> 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" @onclick="ModalCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }

    private Task ModalOpen()
    {
        return OnClose.InvokeAsync(true);
    }
}