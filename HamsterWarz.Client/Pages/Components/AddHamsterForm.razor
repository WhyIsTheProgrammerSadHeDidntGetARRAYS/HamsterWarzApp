@page "/addhamster"
@using HamsterWarz.Entities.ViewModels
@inject IRequestService _service

<div class="card d-flex" style="width: 18rem;">
    <div class="card-header">
        <h2>Add new Hamster</h2>
    </div>
    <br />
    <div class="card-body">
        <EditForm Model="@NewHamster" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group row">
                <label for="@NewHamster.Name">
                    Name
                </label>
                <div class="col-sm-10">
                    <InputText id="name" @bind-Value="NewHamster.Name"></InputText>
                </div>
            </div>

            <div class="form-group row">
                <label for="@NewHamster.Age">
                    Age
                </label>
                <div class="col-sm-10">
                    <InputNumber id="age" @bind-Value="NewHamster.Age"></InputNumber>
                </div>
            </div>
            <div class="form-group row">
                <label for="@NewHamster.Loves">
                    Loves
                </label>
                <div class="col-sm-10">
                    <InputText id="loves" @bind-Value="NewHamster.Loves"></InputText>
                </div>
            </div>
            <div class="form-group row">
                <label for="@NewHamster.ImageUrl">
                    Image path
                </label>
                <div class="col-sm-10">
                    <InputText id="image" @bind-Value="NewHamster.ImageUrl"></InputText>
                </div>
            </div>
            <div>
        <button class="btn btn-outline-dark btn-sm" type="submit">Submit</button>
    </div>
        </EditForm>
    </div>
</div>

@code {
    public HamsterViewModel? NewHamster { get; set; } = new HamsterViewModel();

    public async Task HandleSubmit()
    {
        if (NewHamster != null)
        {
            await _service.AddNewHamster(NewHamster);
        }

    }
}
